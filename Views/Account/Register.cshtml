@model EMassage.Models.RegisterViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}

<!-- Вывод общего сообщения об успешной регистрации -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Регистрация</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" class="form-control" autofocus />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>